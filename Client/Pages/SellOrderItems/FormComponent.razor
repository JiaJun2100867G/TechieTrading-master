@inject HttpClient _client

<EditForm Model="@sellorderitem" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    @*<fieldset disabled="Disabled">*@
    <div class="form-group">
        <label>Product: </label>
        <div>
            <InputSelect @bind-Value="@sellorderitem.ProductId" class="form-control" >
            <option value="">-- Select Product --</option>
                    @if (Staffs != null)
                    {
                        foreach (var product in Products)
                            {
                                <option value="@product.Id">@product.Name</option>
                            }
                    }
                </InputSelect>
            <ValidationMessage For="@(() => sellorderitem.StaffId)" />
        </div>
    </div>
    <div class="form-group">
        <label>Product: </label>
        <div>
            <InputSelect @bind-Value="@sellorderitem.Product" class="form-control" />
            <ValidationMessage For="@(() => sellorderitem.OrderItemDate)" />
        </div>
    </div>
    <div class="form-group">
        <label>OrderItem Time: </label>
        <div>
            <InputDate @bind-Value="@sellorderitem.OrderItemTime" class="form-control" />
            <ValidationMessage For="@(() => sellorderitem.OrderItemTime)" />
        </div>
    </div>
    <div class="form-group">
        <label>Delivery Type: </label>
        <div>
            <InputText @bind-Value="@sellorderitem.DeliveryType" class="form-control" />
            <ValidationMessage For="@(() => sellorderitem.DeliveryType)" />
        </div>
    </div>
    <div class="form-group">
        <label>Staff: </label>
        <div>
            <InputSelect @bind-Value="@sellorderitem.StaffId" class="form-control" >
            <option value="">-- Select Staff --</option>
                    @if (Staffs != null)
                    {
                        foreach (var staff in Staffs)
                            {
                                <option value="@staff.Id">@staff.FirstName</option>
                            }
                    }
                </InputSelect>
            <ValidationMessage For="@(() => sellorderitem.StaffId)" />
        </div>
    </div>
    <div class="form-group">
        <label>Customer: </label>
        <div>
            <InputSelect @bind-Value="@sellorderitem.CustomerId" class="form-control" >
            <option value="">-- Select Customer --</option>
                    @if (Customers != null)
                    {
                        foreach (var customer in Customers)
                            {
                                <option value="@customer.Id">@customer.FirstName</option>
                            }
                    }
                </InputSelect>
            <ValidationMessage For="@(() => sellorderitem.CustomerId)" />
        </div>
    </div>
    @*</fieldset>*@
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="sellorderitems" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public SellOrderItem sellorderitem { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    private IList<Staff> Products;

    protected async override Task OnInitializedAsync()
    {
        Products = await _client.GetFromJsonAsync<List<Product>>($"{Endpoints.ProductsEndpoint}");
    }
}
